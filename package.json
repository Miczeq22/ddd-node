{
  "scripts": {
    "start": "NODE_ENV=production node dist",
    "dev": "NODE_ENV=development nodemon --watch \"src/**/*.ts\" --exec \"ts-node -r tsconfig-pathws/register\" ./src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "test": "NODE_ENV=test jest --config ./jest.config.js",
    "test:watch": "NODE_ENV=test jest --config ./jest.config.js --watch",
    "test:ci": "NODE_ENV=ci docker-compose up -d postgres && jest --config ./jest.config.js --ci --coverage --forceExit",
    "lint": "eslint --ext .ts \"src/**/*\"",
    "format": "prettier --write \"src/**/*\"",
    "typecheck": "tsc --noEmit",
    "version": "conventional-changelog -p emojis -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "build-docker-prod": "docker build -t ddd-node:latest -f docker/Dockerfile .",
    "migration": "knex migrate:latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick"
    }
  },
  "_moduleAliases": {
    "@root": "dist/src",
    "@api": "dist/api",
    "@app": "dist/app",
    "@infrastructure": "dist/infrastructure",
    "@tools": "dist/tools",
    "@errors": "dist/errors",
    "@core": "dist/core",
    "@tests": "dist/tests"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^26.0.20",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^8.2.0",
    "knex": "^0.95.1",
    "pg": "^8.5.1",
    "uuid": "^8.3.2"
  }
}
